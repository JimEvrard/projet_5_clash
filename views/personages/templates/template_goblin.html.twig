<div class="wrapper">
	<a href="/update_personage/{{personage._id}}">

		<div class="clash-card goblin">
			<div class="clash-card__image clash-card__image--goblin">
				<img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/goblin.png" alt="goblin"/>
			</div>
			<div class="clash-card__level clash-card__level--goblin">LEVEL
				{{personage.level}}</div>
			<div class="clash-card__unit-name">{{personage.name}}</div>
			<div class="clash-card__unit-description">
				{{personage.description}}
			</div>

			<div class="clash-card__unit-stats clash-card__unit-stats--goblin clearfix">
				<div class="one-third">
					<div class="stat">{{personage.attack}}
					</div>
					<div class="stat-value">Attack</div>
				</div>

				<div class="one-third">
					<div class="stat">{{personage.defense}}</div>
					<div class="stat-value">Defense</div>
				</div>

				<div class="one-third no-border">
					<div class="stat">{{personage.life}}</div>
					<div class="stat-value">Life</div>
				</div>

			</div>

		</div>
	</a>
	<!-- end clash-card goblin-->
</div>
