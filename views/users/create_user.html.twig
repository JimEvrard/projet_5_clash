{% extends "./../index.html.twig" %}


{% block main %}

	<div class="container">
		<div class="row">

			<form class="col-md-6 mx-auto mt-5" method="post" action="/create_user">
				<div>
					<label for="name_user">Name</label>
					<input type="text" class="form-control" name="name" value="{{user.name}}">
				</div>
				<div>
					<label for="mail">mail</label>
					<input type="email" class="form-control" name="mail" value="{{user.mail}}">
				</div>
				<div>
					<label for="identifiant">Pseudo</label>
					<input type="text" class="form-control" name="pseudo" value="{{user.pseudo}}">
				</div>
				<div>
					<label for="mdp">Mot de Passe</label>
					<input type="password" class="form-control" name="mdp" value="{{user.mdp}}">
				</div>


				<button type="submit" class="btn btn-dark">Submit</button>

			</form>
		</div>
	</div>

{% endblock %}
